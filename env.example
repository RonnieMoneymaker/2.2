# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=./sqlite.db
DB_PATH=./database/crm.db

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=2000
NODE_ENV=development

# ============================================
# SECURITY
# ============================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_64_characters_minimum

# CORS Origins (voor productie - comma separated)
CORS_ORIGIN=http://localhost:2001

# ============================================
# GOOGLE ADS API - LIVE CAMPAIGN DATA
# ============================================
# Verkrijg via: https://console.cloud.google.com
# Developer token: https://ads.google.com/aw/apicenter
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=your_client_secret_here
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_ADS_CUSTOMER_ID=123-456-7890

# OAuth for easy login (optional - for auto-koppeling via CMS)
GOOGLE_OAUTH_CLIENT_ID=your_oauth_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_oauth_client_secret

# ============================================
# META/FACEBOOK ADS API - LIVE SOCIAL DATA
# ============================================
# Verkrijg via: https://developers.facebook.com
META_ACCESS_TOKEN=your_long_lived_access_token_here
META_AD_ACCOUNT_ID=act_1234567890
META_APP_ID=your_app_id_here
META_APP_SECRET=your_app_secret_here

# Note: META_APP_ID and META_APP_SECRET enable OAuth login via CMS

# ============================================
# SHIPPING PROVIDERS
# ============================================

# DHL Shipping API
# Verkrijg via: https://developer.dhl.com
DHL_API_KEY=your_dhl_api_key_here
DHL_API_SECRET=your_dhl_api_secret_here
DHL_ACCOUNT_NUMBER=your_dhl_account_number
DHL_ENVIRONMENT=sandbox

# PostNL Shipping API (Optional)
POSTNL_API_KEY=your_postnl_api_key
POSTNL_CUSTOMER_CODE=your_customer_code
POSTNL_CUSTOMER_NUMBER=your_customer_number

# ============================================
# EMAIL SERVICES
# ============================================

# SMTP Configuration (Gmail, Outlook, etc.)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your@email.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=noreply@jouwwebshop.nl

# SendGrid (Alternative to SMTP)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@jouwwebshop.nl
SENDGRID_FROM_NAME=Jouw Webshop

# ============================================
# PAYMENT PROVIDERS
# ============================================

# Mollie (Nederlandse betalingen - iDEAL, etc.)
MOLLIE_API_KEY=test_your_mollie_api_key_here

# Stripe (International payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# ============================================
# ANALYTICS & TRACKING (Optional)
# ============================================

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Microsoft Clarity
CLARITY_PROJECT_ID=your_clarity_project_id

